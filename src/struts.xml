<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="false"/>
	<package name="webshop" extends="struts-default" namespace="/">
		<!-- 配置自定义拦截器 -->
		<interceptors>
			<interceptor name="privilegeInterceptor" class="com.zrq.shop.interceptor.PrivilegeInterceptor"/>
			<interceptor-stack name="backsys">
				<interceptor-ref name="privilegeInterceptor"/>
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>
		
		<global-results>
			<result name="msg">/WEB-INF/jsp/msg.jsp</result>
			<result name="login">/admin/index.jsp</result>
		</global-results>
		
		<!--配置首页登录Action  -->
		<action name="index" class="indexAction">
			<result name="index">/WEB-INF/jsp/index.jsp</result>
		</action>
		<action name="user_*" class="userAction" method="{1}">
			<result name="regist">/WEB-INF/jsp/regist.jsp</result>
			<result name="input">/WEB-INF/jsp/regist.jsp</result>
			<result name="login">/WEB-INF/jsp/login.jsp</result>
			<result name="loginSuccess" type="redirectAction">index</result>
			<result name="quit" type="redirectAction">index</result>
			<result name="checkcodeFail">/WEB-INF/jsp/regist.jsp</result>
		</action>
		
		<!-- 验证码的Action -->
		<action name="checkImg" class="checkImg"/>
		
		<!-- 产品Action -->
		<action name="product_*" class="productAction" method="{1}">
			<result name="findByPid">/WEB-INF/jsp/product.jsp</result>
			<result name="findByCid">/WEB-INF/jsp/productList.jsp</result>
			<result name="findByCsid">/WEB-INF/jsp/productList.jsp</result>
		</action>
		
		<!-- 目录的Action -->
		<action name="category_*" class="categoryAction" method="{1}">
		</action>
		
		<!-- 购物车Action -->
		<action name="cart_*" class="cartAction" method="{1}">
			<result name="mycart">/WEB-INF/jsp/cart.jsp</result>
			<result name="addCart">/WEB-INF/jsp/cart.jsp</result>
			<result name="removeCart">/WEB-INF/jsp/cart.jsp</result>
			<result name="clearCart">/WEB-INF/jsp/cart.jsp</result>
		</action>
		
		<!-- 订单Action -->
		<action name="order_*" class="orderAction" method="{1}">
			<result name="save">/WEB-INF/jsp/order.jsp</result>
			<result name="findByUid">/WEB-INF/jsp/orderList.jsp</result>
			<result name="findByOid">/WEB-INF/jsp/order.jsp</result>
			<result name="updateStateSuccess" type="redirectAction">order_findByUid.action?page=1</result>
			<result name="removeOrder" type="redirectAction">order_findByUid.action?page=1</result>
			<interceptor-ref name="backsys"/>
		</action>
		
		<!-- 后台管理Action -->
		<action name="adminUser_*" class="adminUserAction" method="{1}">
			<result name="loginSuccess">/admin/home.jsp</result>
			<result name="loginFail">/admin/index.jsp</result>
			<result name="logout">/admin/index.jsp</result>
			<interceptor-ref name="privilegeInterceptor">
					<param name="excludeMethods">login</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"/>
		</action>
		
		<!-- 后台用户管理Action -->
		<action name="userAdmin_*" class="userAdminAction" method="{1}">
			<result name="findByPage">/admin/user/list.jsp</result>
			<result name="edit">/admin/user/edit.jsp</result>
			<result name="delete" type="redirectAction">userAdmin_findByPage?page=1</result>
			<result name="update" type="redirectAction">userAdmin_findByPage?page=1</result>
			<interceptor-ref name="backsys"/>
		</action>
		
		<!-- 后台一级分类管理Action -->
		<action name="adminCategory_*" class="adminCategoryAction" method="{1}">
			<result name="findAll">/admin/category/list.jsp</result>
			<result name="delete" type="redirectAction">adminCategory_findAll</result> 
			<result name="save" type="redirectAction">adminCategory_findAll</result> 
			<result name="update" type="redirectAction">adminCategory_findAll</result>
			<result name="edit">/admin/category/edit.jsp</result>
			<interceptor-ref name="backsys"/>
		</action>
		
		<!-- 后台二级分类管理Action -->
		<action name="adminCategorySecond_*" class="adminCategorySecondAction" method="{1}">
			<result name="findAll">/admin/categorysecond/list.jsp</result>
			<result name="add">/admin/categorysecond/add.jsp</result>
			<result name="delete" type="redirectAction">adminCategorySecond_findAll?page=1</result> 
			<result name="save" type="redirectAction">adminCategorySecond_findAll?page=1</result> 
			<result name="update" type="redirectAction">adminCategorySecond_findAll?page=1</result>
			<result name="edit">/admin/categorysecond/edit.jsp</result>
			<interceptor-ref name="backsys"/>
		</action>
		
		<!-- 后台商品管理Action -->
		<action name="adminProduct_*" class="adminProductAction" method="{1}">
			<result name="findAll">/admin/product/list.jsp</result>
			<result name="add">/admin/product/add.jsp</result>
			<result name="delete" type="redirectAction">adminProduct_findAll?page=1</result> 
			<result name="save" type="redirectAction">adminProduct_findAll?page=1</result> 
			<result name="update" type="redirectAction">adminProduct_findAll?page=1</result>
			<result name="edit">/admin/product/edit.jsp</result>
			<interceptor-ref name="backsys"/>
		</action>
		
		<!-- 后台订单管理Action -->
		<action name="adminOrder_*" class="adminOrderAction" method="{1}">
			<result name="findAll">/admin/order/list.jsp</result>
			<result name="findOrderItem">/admin/order/OrderItem.jsp</result>
			<result name="update" type="redirectAction">adminOrder_findAll?page=1</result>
			<interceptor-ref name="backsys"/>
		</action>
	</package>
</struts>    
